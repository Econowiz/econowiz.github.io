          "id": "financial-close-calculator",
          "title": "Financial Close Automation ROI Calculator",
          "type": "calculator",
          "config": {
            "type": "roi",
            "title": "Calculate Financial Close Automation ROI",
            "description": "Estimate potential savings from automating your month-end close process based on the results shown above.",
            "fields": [
              {
                "id": "current_close_hours",
                "label": "Current Close Duration (Hours)",
                "type": "number",
                "defaultValue": 120,
                "min": 50,
                "max": 300,
                "step": 10,
                "description": "Total staff hours for monthly close cycle",
                "tooltip": "Average team hours to complete a monthly close."
              },
              {
                "id": "avg_hourly_cost",
                "label": "Blended Hourly Cost ($/hour)",
                "type": "currency",
                "defaultValue": 75,
                "min": 45,
                "max": 150,
                "step": 5,
                "description": "Average cost including benefits & overhead",
                "tooltip": "Average fully loaded hourly cost for your team."
              },
              {
                "id": "error_frequency",
                "label": "Monthly Reconciliation Issues",
                "type": "number",
                "defaultValue": 12,
                "min": 3,
                "max": 50,
                "step": 1,
                "description": "Discrepancies requiring manual investigation",
                "tooltip": "Average exceptions per month that need investigation. The model applies a typical per-issue handling cost."
              },
              {
                "id": "automation_rate",
                "label": "Target Automation Level (%)",
                "type": "percentage",
                "defaultValue": 70,
                "min": 50,
                "max": 85,
                "step": 5,
                "description": "Expected task automation (reference: 73.7%)",
                "tooltip": "Estimated portion of the close you can automate."
              },
              {
                "id": "solution_investment",
                "label": "Solution Investment ($)",
                "type": "currency",
                "defaultValue": 75000,
                "min": 5000,
                "max": 200000,
                "step": 5000,
                "description": "One-time development & implementation cost",
                "tooltip": "One-time cost to implement and integrate the solution."
              }
            ],
            "formula": "((current_close_hours * avg_hourly_cost * 12) + (error_frequency * 250 * 12)) * (automation_rate/100) - solution_investment",
            "resultFormat": "currency",
            "resultLabel": "First-Year Net Savings",
            "additionalOutputs": [
              {
                "id": "annual_gross_savings",
                "label": "Annual Gross Savings",
                "formula": "((current_close_hours * avg_hourly_cost * 12) + (error_frequency * 250 * 12)) * (automation_rate/100)",
                "format": "currency"
              },
              {
                "id": "break_even_investment",
                "label": "Max Justifiable Investment (Year 1)",
                "formula": "((current_close_hours * avg_hourly_cost * 12) + (error_frequency * 250 * 12)) * (automation_rate/100)",
                "format": "currency"
              },
              {
                "id": "roi_multiple",
                "label": "ROI Multiple",
                "formula": "(((current_close_hours * avg_hourly_cost * 12) + (error_frequency * 250 * 12)) * (automation_rate/100)) / solution_investment",
                "format": "multiplier"
              },
              {
                "id": "payback_months",
                "label": "Payback Period (Months)",
                "formula": "solution_investment / ((((current_close_hours * avg_hourly_cost * 12) + (error_frequency * 250 * 12)) * (automation_rate/100)) / 12)",
                "format": "decimal"
              }
            ]
          }
        }
